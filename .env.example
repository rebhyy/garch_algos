# API Keys Configuration
# Copy this file to .env and fill in your actual keys
# NEVER commit .env to git!

# Twelve Data API (for crypto & forex data)
# Get your free key at: https://twelvedata.com/
TWELVEDATA_API_KEY=your_twelvedata_key_here

# Alpha Vantage API (for FX data)
# Get your free key at: https://www.alphavantage.co/support/#api-key
ALPHAVANTAGE_API_KEY=your_alphavantage_key_here

# Optional: OpenAI API for AI-enhanced predictions (if implementing GPT-based analysis)
# OPENAI_API_KEY=your_openai_key_here

# Application Settings
TIMEZONE=Africa/Tunis
DEFAULT_TIMEFRAME=30m
DEFAULT_PERIOD=60d
CACHE_TTL=120

# Alert Settings (for trigger system)
ALERT_EMAIL=your_email@example.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password

# Database (optional - for storing alerts/trades)
# DATABASE_URL=sqlite:///garch_algos.db

# Risk Management Defaults
DEFAULT_RISK_PER_TRADE=1.0
DEFAULT_MAX_POSITION_SIZE=0.20
DEFAULT_STOP_LOSS_ATR_MULT=1.5
